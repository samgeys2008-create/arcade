import pygame, sys

pygame.init()
pygame.joystick.init()

screen = pygame.display.set_mode((900, 700))
font = pygame.font.SysFont(None, 26)
clock = pygame.time.Clock()

joysticks = []
for i in range(pygame.joystick.get_count()):
    j = pygame.joystick.Joystick(i)
    j.init()
    joysticks.append(j)

scroll_y = 0
SCROLL_SPEED = 30

def draw(text, x, y):
    screen.blit(font.render(text, True, (255,255,255)), (x,y))

while True:
    for e in pygame.event.get():
        if e.type == pygame.QUIT:
            pygame.quit(); sys.exit()
        if e.type == pygame.MOUSEWHEEL:
            scroll_y += e.y * SCROLL_SPEED
        if e.type == pygame.KEYDOWN:
            if e.key == pygame.K_DOWN: scroll_y -= SCROLL_SPEED
            if e.key == pygame.K_UP: scroll_y += SCROLL_SPEED

    screen.fill((0,0,0))
    y = 20 + scroll_y

    for idx, j in enumerate(joysticks):
        draw(f"CONTROLLER {idx} â€” {j.get_name()}", 20, y)
        y += 30

        for a in range(j.get_numaxes()):
            draw(f"Axis {a}: {j.get_axis(a): .3f}", 40, y)
            y += 22

        for b in range(j.get_numbuttons()):
            draw(f"Button {b}: {j.get_button(b)}", 40, y)
            y += 22

        y += 30

    pygame.display.flip()
    clock.tick(60)
